<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<features xmlns="http://karaf.apache.org/xmlns/features/v1.0.0" name="${project.artifactId}-${project.version}">
  <feature name="${project.artifactId}">
    <!-- CAS libraries -->
    <bundle>wrap:mvn:org.jasig.cas.client/cas-client-core/3.2.1</bundle>
    <bundle>mvn:org.ccci.gto/cas-client-integration-thekey/${thekey.cas.client.version}</bundle>

    <!-- JPA/DB dependencies -->
    <feature>jpa</feature>
    <bundle>mvn:mysql/mysql-connector-java/${mysql.version}</bundle>
    <bundle>mvn:commons-dbcp/commons-dbcp/${commons-dbcp.version}</bundle>
    <bundle>mvn:net.sourceforge.serp/com.springsource.serp</bundle>
    <bundle>mvn:org.apache.openjpa/openjpa/${openjpa.version}</bundle>
    <feature version="${spring.version}">spring-orm</feature>

    <bundle>mvn:${project.groupId}/${project.artifactId}/${project.version}</bundle>
  </feature>
</features>
